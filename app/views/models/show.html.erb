<h2>Model</h2>
<p>
  <strong>Name:</strong>
  <%= @model.name %>
</p>
<p>
  <%= link_to edit_model_path(@model), :class => "btn btn-primary" do %>
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
  <% end %>
  <%= link_to models_path, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Back
  <% end %>
</p>