    <%= f.label :contact_id %>
    <%= f.select :contact_id, options_from_collection_for_select(@client.contacts, :id, :name), :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :industry %>
    <%= f.text_field :industry %>
  </div>
  <div class="field">
    <%= f.label :comments %>
    <%= f.text_area :comments %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
