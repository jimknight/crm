    <%= f.label :contact_id %>
    <%= f.text_field :contact_id %>
  </div>
  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :industry %>
    <%= f.text_field :industry %>
  </div>
  <div class="field">
