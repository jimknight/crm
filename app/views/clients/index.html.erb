<h2>Clients</h2>
<p><%= link_to 'New Client', new_client_path, :class => "btn btn-primary" %></p>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Street1</th>
      <th>Street2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Phone</th>
      <th>Industry</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= link_to client.name, client %></td>
        <td><%= client.street1 %></td>
        <td><%= client.street2 %></td>
        <td><%= client.city %></td>
        <td><%= client.state %></td>
        <td><%= client.zip %></td>
        <td><%= client.phone %></td>
        <td>
        <% if client.industry.present? %>
          <%= Industry.find(client.industry).name %>
        <% else %>
          &nbsp;
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
