<h2><%= @client.name %></h2>

<p>
  <strong>Street1:</strong>
  <%= @client.street1 %>
</p>

<p>
  <strong>Street2:</strong>
  <%= @client.street2 %>
</p>

<p>
  <strong>City:</strong>
  <%= @client.city %>
</p>

<p>
  <strong>State:</strong>
  <%= @client.state %>
</p>

<p>
  <strong>Zip:</strong>
  <%= @client.zip %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @client.phone %>
</p>

<p>
  <strong>Industry:</strong>
  <%= @client.industry %>
</p>

<p><%= link_to "Add contact", new_client_contact_path(@client), :class => "btn btn-primary" %></p>
<% if @client.contacts.present? %>
  <h2>List of contacts for this client</h2>
  <ul>
  <% @client.contacts.each do |contact| %>
  <li><%= link_to contact.name, [@client,contact] %></li>
  <% end %>
  </ul>
<% end %>
