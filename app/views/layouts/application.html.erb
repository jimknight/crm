    <!--For sample logo only-->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="../assets/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="../assets/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="../assets/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="../assets/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="../assets/ico/apple-touch-icon-57-precomposed.png">
  </head>
  <body>
    <div class="navbar">
      <div class="navbar-inner">
        <a class="brand" href="index.html">c r m</a>
      </div>
    </div>
    <div id="main-menu">
      <ul class="nav nav-tabs">
        <li class = "active">
          <%= link_to activities_path do %>
              <span class="glyphicon glyphicon-dashboard" aria-hidden="true"></span>
            Activities
          <% end %>
        </li>
        <li>
          <%= link_to clients_path do %>
            <span class="glyphicon glyphicon-user"></span>
            Clients
          <% end %>
        </li>
        <li>
          <%= link_to models_path do %>
            <span class="glyphicon glyphicon-book"></span>
            Models
          <% end %>
        </li>
        <li><%= link_to industries_path do %>
            <span class="glyphicon glyphicon-th-large"></span>
            Industries
          <% end %></li>
      </ul>
    </div>
    <div id="sidebar-nav">
      <ul id="dashboard-menu" class="nav nav-list">

            <% if current_user %>
            <li>
              <%= link_to destroy_user_session_path, :method => :delete do %>
<span class="glyphicon glyphicon-log-out"></span> Logout
              <% end %>
            </li>
            <% end %>
      </ul>
    </div>
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12 main-content">
            <% if notice %>
            <div class="alert alert-success" role="alert"><%= notice %>
            </div>            <% end %>
            <% if alert %>
            <div class="alert alert-danger" role="alert"><%= alert %></div>
<% end %>

        <%= yield %>
      </div>
          <footer>
      <!--       <hr>
            <p class="pull-right">Design by
              <a href="http://www.portnine.com" target="_blank">Portnine</a></p>
            <p>Â© 2013
              <a href="#">Your Company</a></p> -->
          </footer>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
